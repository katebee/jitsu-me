<!DOCTYPE html>
<html>
<head>
  <title>Jitsu Me</title>

  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Lato:400,700' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <!-- Static navbar -->
    <div class="navbar navbar-inverse navbar-static-top">
      <a class="nav__brand" href="/">The Unoffical Jitsu Finder</a>
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right nav-pills">
            <li class="nav__link"><%= link_to 'Home', root_path %></li>
            <li class="nav__link"><%= link_to 'Clubs', clubs_path %></li>
            <li class="nav__link"><%= link_to 'Calendar', events_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class="container-fluid">

      <%= yield %>

    </div><!-- end container-fluid -->

  </body>
</html>
