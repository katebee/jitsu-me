<div class="container-fluid">

<div class="row">

  <div id="map-container" class="map-container">
    <div class="center-div">
      <div class="section__content">
        <h1>Find Jitsu</h1>
        <h3>Welcome to the London Jitsu club finder</h3>
        <p>Find which clubs are near you and training today</p>

        <button id="find-me-button" class="jitsu-button has-spinner">FIND ME</button>
        <br>
        <button id="jitsu-me-button" class="jitsu-button has-spinner">JITSU ME</button>
      </div>
    </div>
    <div id="map"></div>

  </div><!-- end of map-->

</div><!-- end of row-->

</div><!-- end container-fluid -->

<div class="container-fluid upcoming-sessions">
  <h3 class="upcoming-sessions__heading">Upcoming Sessions</h3>

<div class="">
  <% @upcoming_events.each do |session| %>
    <div class="upcoming-sessions__cards">
      <div>
        <h4><%= session.title %></h4>
        <h5><%= session.description %></h5>
        <h5><%= session.start_time %></h5>
        <h5><%= session.end_time %></h5>
        <p>
          <%= link_to ("https://citymapper.com/directions?endcoord=#{session.location.location_lat}%2C#{session.location.location_lng}&endname=#{URI.escape(session.title)}"), target: '_blank', class: "js-citymapper-link" do %>
            <%= image_tag("https://static.citymapper.com/img/embed/GetMeThere_Citymapper.png") %>
          <% end %>
        </p>
        <br>
      </div>
    </div>
  <% end %>
</div>
</div>
